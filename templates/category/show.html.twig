{% extends 'baseBackOffice.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
  <div class="container mt-5" style="max-width: 50%;">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-4">
        <h1 class="text-center text-primary fw-bold mb-4" style="color:rgb(153, 177, 217);">Category Details</h1>

        <table class="table table-hover table-striped table-bordered text-center align-middle">
          <tbody>
            <tr>
                <th style="width: 20%;">Id</th>
              <td>{{ category.id }}</td>
            </tr>
            <tr>
              <th style="width: 20%;">Name</th>
              <td>{{ category.name }}</td>
            </tr>
            <tr>
              <th style="width: 20%;">Description</th>
              <td>{{ category.description }}</td>
            </tr>
          </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
          <a href="{{ path('app_category_index') }}" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm" style="background-color: #89CFF0; border-color: #89CFF0;">
            <i class="fas fa-arrow-left"></i> Back to list
          </a>
          <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm" style="background-color: #87CEEB; border-color: #87CEEB;">
            <i class="fas fa-edit"></i> Edit
          </a>
        </div>

       
      </div>
    </div>
  </div>
{% endblock %}