{% extends 'baseBackOffice.html.twig' %}

{% block title %}Category Index{% endblock %}

{% block body %}
  <div class="container mt-5" style="max-width: 90%;">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-4" style="margin-left: auto; margin-right: 0;">
        <h2 class="text-center text-primary fw-bold mb-4">ðŸ“‚ Category List</h2>

        <div class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted fs-5">Total Categories: <strong>{{ categories|length }}</strong></span>
          <a href="{{ path('app_category_new') }}" class="btn btn-success px-4 py-2 rounded-3 shadow-sm" style="background-color: #ADD8E6; border-color: #ADD8E6;">
            <i class="fas fa-plus-circle"></i> Add New Category
          </a>
        </div>

        <div class="table-responsive">
          <table class="table table-hover table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
              <tr>
                <th style="width: 5%;">ID</th>
                <th style="width: 20%;">Category Name</th>
                <th style="width: 50%;">Description</th>
                <th style="width: 25%;">Actions</th>
              </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr class="table-row">
                  <td><strong>{{ category.id }}</strong></td>
                  <td>{{ category.name }}</td>
                  <td class="text-truncate" style="max-width: 800px;">{{ category.description }}</td>
                  <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary btn-sm rounded-3 shadow-sm" style="background-color: #ADD8E6; border-color: #ADD8E6;">
                    <i class="fas fa-eye"></i> View
                    </a>
                  <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary btn-sm rounded-3 shadow-sm" style="background-color: #89CFF0; border-color: #89CFF0;">
                  <i class="fas fa-edit"></i> Edit
                  </a>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="4" class="text-muted">No records found</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <style>
    .table-row:hover {
      background-color: #f8f9fa !important;
      transition: background-color 0.3s ease;
    }

    .btn {
      transition: transform 0.2s ease;
    }

    .btn:hover {
      transform: scale(1.05);
    }

    .text-truncate {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>
{% endblock %}