  {% block body %}
  <section id="products" class="py-5">
    <div class="container">
      <div class="row">
        {% for produit in produits %}
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="{{ asset('uploads/images/' ~ produit.image) }}" class="card-img-top" alt="{{ produit.name }}">
            <div class="card-body">
              <h5 class="card-title">{{ produit.name }}</h5>
              <p class="card-text">{{ produit.desciption }}</p>
              <p class="card-text"><strong>Price:</strong> {{ produit.price }} Dt</p>
              <p class="card-text"><strong>Stock:</strong> {{ produit.quantity }}</p>
              {% if produit.quantity < 3 %}
              <p class="card-text text-warning"><strong>Alert: This product may be out of stock soon!</strong></p>
              {% endif %}
              <a href="#" class="btn btn-outline-primary">Add to Cart</a>
            </div>
          </div>
        </div>
        {% else %}
        <div class="col-12">
          <p class="text-center">No products found</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
